/* pages/index/index.wxss */
.banner{
  width: 670rpx;
  height: 182rpx;
  margin: 44rpx 40rpx 0 40rpx;
  padding-bottom: 40rpx;
  overflow: hidden;
  border-radius: 18rpx;
  border-bottom: 2rpx solid #ededed;
}
.banner .gdbanner{
  width: 100%;
  height: 100%;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: space-between;
   white-space: nowrap; 
}
.banner .gdbanner .bn1{
  width: 100%;
  height: 100%;
}
.rmyx{
  padding: 33rpx 0;
  margin: 0 44rpx;
  border-bottom: 2rpx solid #ededed;
}
.rmyx .bt{
  margin-bottom: 20rpx;
}
.rmyx .bt .bt_logo{
  width: 34rpx;
  height: 34rpx;
  margin-right: 10rpx;
  vertical-align: -3rpx;
}
.rmyx .bt .btnz{
  font-size: 34rpx;
  color: #ff5c13
}
.rmyx .yxnr{
  display: flex;
  display: -webkit-flex;
  justify-content:space-around;
  align-items: flex-start;
}
.rmyx .yxnr .yx{
  width: 150rpx;
  text-align: center;
  font-size: 0;
}
.rmyx .yxnr .yx .yxlogo{
  width: 100%;
  height: 150rpx;
  border-radius: 20rpx;
}
.rmyx .yxnr .yx .yxm{
  display: block;
  font-size: 28rpx;
  line-height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.rmyx .yxnr .yx .dswr{
  font-size: 22rpx;
  color: #666;
}
.rmyx .yxnr .yx .dswr .sl{
  color: #f63137;
}
.rmyx .yxnr .yx .kw{
  width: 92rpx;
  height: 40rpx;
  line-height: 40rpx;
  background: #ffa12b;
  color: #fff;
  font-size: 26rpx;
  white-space: nowrap;
  padding: 0;
  margin: 20rpx auto 0;
  border-radius: 10rpx;
}

